doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    title Mastermind
    meta(name="description", content="Flat UI Kit Free is a Twitter Bootstrap Framework design and Theme, this responsive framework includes a PSD and HTML version.")
    meta(name="viewport", content="width=1000, initial-scale=1.0, maximum-scale=1.0")
    // Loading Bootstrap
    link(href="bootstrap/css/bootstrap.css", rel="stylesheet")
    // Loading Flat UI
    link(href="flat-ui/css/flat-ui.css", rel="stylesheet")
    link(href="app/css/demo.css", rel="stylesheet")
    link(rel="shortcut icon", href="images/favicon.ico")
    // HTML5 shim, for IE6-8 support of HTML5 elements. All other JS at the end of file.
    //if lt IE 9
      script(src="js/html5shiv.js")
      script(src="js/respond.min.js")
  body
    .container
      .demo-headline
        h1.demo-logo
          // <div class="logo"></div>
          | Mastermind
          small Classic game, refurnished
      // /demo-headline
      div(data-bind="foreach: playerGuesses()")
        .row.demo-row.teste
          .col-xs-3
          // So pra centralizar
          div(data-bind="foreach: array()")
            .col-xs-1
              a.btn.btn-block.btn-lg.btn-default(data-bind="css: $parent.class($data)") &#160;
          .col-xs-2
            a.btn.btn-block.btn-lg.btn-default
              span.fui-checkbox-checked
              span.fui-checkbox-checked
              span.fui-checkbox-unchecked
              span.fui-checkbox-unchecked
      .row.demo-row.teste.current(data-bind="with: currentGuess")
        .col-xs-2
        // So pra centralizar
        .col-xs-1(style="text-align: right;")
          span.fui-arrow-right(style="padding-top: 7px;")
        // So pra centralizar
        div(data-bind="foreach: array()")
          .col-xs-1
            a.btn.btn-block.btn-lg.btn-default(data-bind="click: $parent.change, css: $parent.class($data)") &#160;
        .col-xs-2
          a.btn.btn-block.btn-lg.btn-puzzle(data-bind="click: $root.tryGuess")
            span Try Guess
      div(data-bind="foreach: tries()")
        .row.demo-row.teste
          .col-xs-3
          // So pra centralizar
          div(data-bind="foreach: array()")
            .col-xs-1
              a.btn.btn-block.btn-lg.btn-default &#160;
          .col-xs-2
            a.btn.btn-block.btn-lg.btn-default &#160;
      .row.demo-row.teste(data-bind="with: currentGuess")
        .col-xs-3
        // So pra centralizar
        div(data-bind="foreach: array()")
          .col-xs-1
            a.btn.btn-block.btn-lg.btn-puzzle ?
        .col-xs-2
          a.btn.btn-block.btn-lg.btn-puzzle
            span.fui-checkbox-checked
            span.fui-checkbox-checked
            span.fui-checkbox-checked
            span.fui-checkbox-checked
    // /container
    // Load JS here for greater good =============================
    script(src="flat-ui/js/jquery-1.8.3.min.js")
    script(src="flat-ui/js/jquery-ui-1.10.3.custom.min.js")
    script(src="flat-ui/js/jquery.ui.touch-punch.min.js")
    script(src="flat-ui/js/bootstrap.min.js")
    script(src="flat-ui/js/bootstrap-select.js")
    script(src="flat-ui/js/bootstrap-switch.js")
    script(src="flat-ui/js/flatui-checkbox.js")
    script(src="flat-ui/js/flatui-radio.js")
    script(src="flat-ui/js/jquery.tagsinput.js")
    script(src="flat-ui/js/jquery.placeholder.js")
    script(src="http://cdnjs.cloudflare.com/ajax/libs/knockout/3.1.0/knockout-min.js")
    script(src="app/js/app.js")
